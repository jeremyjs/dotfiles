parse_branch () {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/' -e 's/jeremyjs.//g'
}

git_prompt () {
  if [ -z "$(parse_branch)" ]; then
    echo ""
  else
    echo "($(parse_branch)) "
  fi
}

PS1="\u@\h \[$GREEN\]\W \[$BROWNORANGE\]\$(git_prompt)\[$NC\]$ "
